<Window x:Class="GtaImgTool.Dialogs.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="About GTA IMG Tool"
        Width="400" Height="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{StaticResource NotoSans}">
    
    <Window.Resources>
        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#0091cd" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="text" Text="{TemplateBinding Content}" 
                                   Foreground="{TemplateBinding Foreground}"
                                   TextDecorations="Underline" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="text" Property="Foreground" Value="#56a0d3" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="#111111" BorderBrush="#000000" BorderThickness="1" CornerRadius="0">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="4" />
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#222222" CornerRadius="0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="About" FontWeight="SemiBold" FontSize="14"
                               Foreground="#f6f6f5" Margin="16,12" />
                    <Button HorizontalAlignment="Right" VerticalAlignment="Center"
                            Width="32" Height="32" Margin="8,0"
                            Background="Transparent" BorderThickness="0"
                            FontSize="14" Cursor="Hand" Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0">
                                    <TextBlock x:Name="icon" Text="âœ•" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="#6d6e70" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#ed1b2e" />
                                        <Setter TargetName="icon" Property="Foreground" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="24,20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="GTA IMG Tool" FontSize="22" FontWeight="Bold" 
                           Foreground="#f6f6f5" HorizontalAlignment="Center" />
                <TextBlock Text="Version 1.0.0" FontSize="12" 
                           Foreground="#6d6e70" HorizontalAlignment="Center" Margin="0,4,0,12" />
                
                <!-- Game Logos -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                    <Image Source="pack://application:,,,/gta3.png" Width="48" Height="48" Margin="8,0" 
                           RenderOptions.BitmapScalingMode="HighQuality" />
                    <Image Source="pack://application:,,,/gtavc.png" Width="48" Height="48" Margin="8,0" 
                           RenderOptions.BitmapScalingMode="HighQuality" />
                    <Image Source="pack://application:,,,/gtasa.png" Width="48" Height="48" Margin="8,0" 
                           RenderOptions.BitmapScalingMode="HighQuality" />
                </StackPanel>
                
                <!-- Description -->
                <TextBlock Text="A tool for viewing and editing GTA IMG archive files." 
                           FontSize="12" Foreground="#6d6e70" HorizontalAlignment="Center" 
                           TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,16" />
                
                <!-- Author Info -->
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="Developed by" FontSize="11" Foreground="#6d6e70" HorizontalAlignment="Center" />
                    <TextBlock Text="Vaibhav Pandey (VPZ)" FontSize="14" FontWeight="SemiBold" 
                               Foreground="#f6f6f5" HorizontalAlignment="Center" />
                </StackPanel>
                
                <!-- Links -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                    <Button Content="Website" Margin="0,0,8,0" Click="Website_Click" Style="{StaticResource LinkButton}" />
                    <Button Content="YouTube" Margin="0,0,8,0" Click="YouTube_Click" Style="{StaticResource LinkButton}" />
                    <Button Content="GitHub" Margin="0,0,8,0" Click="GitHub_Click" Style="{StaticResource LinkButton}" />
                    <Button Content="Email" Margin="0,0,8,0" Click="Email_Click" Style="{StaticResource LinkButton}" />
                    <Button Content="Support" Click="Support_Click" Style="{StaticResource LinkButton}" />
                </StackPanel>
                
                <!-- Disclaimer -->
                <TextBlock Text="All names and logos are property of their respective owners and are used for illustration purposes only." 
                           FontSize="10" Foreground="#6d6e70" HorizontalAlignment="Center" 
                           TextWrapping="Wrap" TextAlignment="Center" Margin="0,16,0,0" />
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#222222" CornerRadius="0" Padding="16,12">
                <Button Content="Close" Width="90" Height="34" HorizontalAlignment="Center"
                        Background="#ff6a00" Foreground="White" BorderThickness="0" Cursor="Hand"
                        Click="CloseButton_Click" IsDefault="True">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="0" Padding="16,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#ff9900" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>
