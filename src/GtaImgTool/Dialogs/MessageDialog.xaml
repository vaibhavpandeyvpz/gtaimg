<Window x:Class="GtaImgTool.Dialogs.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Message"
        Width="420" SizeToContent="Height"
        MinHeight="180" MaxHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{StaticResource NotoSans}">
    
    <Border Background="#111111" BorderBrush="#000000" BorderThickness="1" CornerRadius="0">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="4" />
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#222222" CornerRadius="0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock x:Name="TitleText" Text="Message" FontWeight="SemiBold" FontSize="14"
                               Foreground="#f6f6f5" Margin="16,12" />
                    <Button HorizontalAlignment="Right" VerticalAlignment="Center"
                            Width="32" Height="32" Margin="8,0"
                            Background="Transparent" BorderThickness="0"
                            FontSize="14" Cursor="Hand" Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0">
                                    <TextBlock x:Name="icon" Text="âœ•" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               Foreground="#6d6e70" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#ed1b2e" />
                                        <Setter TargetName="icon" Property="Foreground" Value="White" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="24,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Icon -->
                <Border Grid.Column="0" Width="48" Height="48" CornerRadius="0" 
                        Background="#222222" Margin="0,0,16,0" VerticalAlignment="Top">
                    <fa:ImageAwesome x:Name="IconAwesome" Icon="InfoCircle" Width="24" Height="24"
                                     Foreground="#0091cd" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                
                <!-- Message -->
                <TextBlock x:Name="MessageText" Grid.Column="1" Text="" TextWrapping="Wrap"
                           Foreground="#f6f6f5" FontSize="14" VerticalAlignment="Center" />
            </Grid>

            <!-- Button -->
            <Border Grid.Row="2" Background="#222222" CornerRadius="0" Padding="16,12">
                <Button Content="OK" Width="90" Height="34" HorizontalAlignment="Right"
                        Background="#ff6a00" Foreground="White" BorderThickness="0" Cursor="Hand"
                        Click="OkButton_Click" IsDefault="True">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="0" Padding="16,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#ff9900" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>
